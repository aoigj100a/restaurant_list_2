<!-- 標題 -->
<h1 class="mb-1 restaurant-show-title">新增餐廳資訊</h1>

<!-- 表單 -->
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <form class="form-horizontal mx-5" action='/restaurant/new' method="POST" enctype="multipart/form-data">
        <fieldset id="tab011 ">
          <div class="control-group pb-4">
            <!-- 餐廳中文名稱 -->
            <label class="control-label h5 col" for="name">中文名稱：</label>
            <div class="controls col-6">
              <input type="text" id="name" name="name" placeholder="字數需大於三個字，必填。" minlength="3" class="my-input  form-control" required>
              <span class="text-secondary">請輸入中文。</span>
            </div>
          </div>

          <div class="control-group pb-4">
            <!-- 餐廳英文名稱 -->
            <label class="control-label h5 col" for="name_en">英文名稱：</label>
            <div class="controls col-6">
              <input type="text" id="name_en" name="name_en" placeholder="輸入英文，並大於三個字，非必填。" pattern="[A-Za-z\s']{3,}"  class="my-input form-control ">
              <span class="text-secondary">請輸入英文。</span>
            </div>
          </div>

          <div class="control-group pb-4">
            <!-- 餐廳種類 -->
            <label class="control-label h5 col" for="category">種類：</label>
            <div class="controls col-6">
              <select name="category" id="category" placeholder="選取種類" class="my-input form-control" required>
               <option selected disabled>選取種類。</option>
                <option value="咖啡廳">咖啡廳</option>
                <option value="酒吧">酒吧</option>
                <option value="義式餐廳">義式餐廳</option>
                <option value="美式">美式</option>
                <option value="中東料理">中東料理</option>
                <option value="日式料理">日式料理</option>
              </select>
            </div>
          </div>

          <div class="control-group pb-4">
            <!-- 餐廳照片 -->
            <label class="control-label h5 col" for="image">上傳照片：</label>
            <div class="controls col-6">
              <input type="file" id="image" name="image" placeholder="" class="my-input form-control" accept="image/*">
              <span class="text-secondary">請上傳一張照片。</span>
            </div>
          </div>

          <div class="control-group pb-4">
            <!-- 餐廳地址 -->
            <label class="control-label h5 col" for="location">地址：</label>
            <div class="controls col">
              <input type="text" id="location" name="location" placeholder="填入餐廳所在之處，必填。" class="my-input form-control" required>
              <span class="text-secondary">輸入完整地址。</span>
            </div>
          </div>

          <div class="control-group pb-4">
            <!-- 餐廳電話 -->
            <label class="control-label h5 col" for="phone">電話：</label>
            <div class="controls col-6">
              <input type="text" id="phone" name="phone" placeholder="00-0000-0000 或 0000-000-000" pattern="[0-9]{2,4}-[0-9]{3,4}-[0-9]{3,5}" class="my-input form-control" required>
              <span class="text-secondary">輸入完整室內電話。</span>
            </div>
          </div>

          <div class="control-group pb-4">
            <!-- 餐廳google map -->
            <label class="control-label h5 col" for="google_map">google map：</label>
            <div class="controls col">
              <input type="text" id="google_map" name="google_map" placeholder="google map網址，非必填。" class="my-input form-control">
              <span class="text-secondary">輸入完整google map位址。</span>
            </div>
          </div>

          <div class="control-group pb-4">
            <!-- 餐廳星數 -->
            <label class="control-label h5 col" for="rating">星數：</label>
            <div class="controls col-6">
              <input type="text" id="rating" name="rating" placeholder="最多五顆星" min="1" max="5" class="my-input form-control" required>
              <span class="text-secondary">選取數值</span>
            </div>
          </div>


          <div class="control-group pb-4">
            <!-- 餐廳詳細資訊 -->
            <label class="control-label h5 col" for="description">詳細資訊：</label>
            <div class="controls col">
              <textarea id="description" name="description" class="my-input form-control" rows="3" maxlength="200">在這裏表達對餐廳的喜愛，講講他的特色吧！</textarea>
              <span class="text-secondary">輸入詳細資訊。</span>
            </div>
          </div>
          <div class="control-group pb-4">
            <div class="controls col">
              <input type="submit" class="btn btn-success" value="確定送出">
            </div>
          </div>
        </fieldset>
    </div>

    </form>


  </div>
</div>
</div>